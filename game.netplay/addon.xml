<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="game.netpaly"
       name="Netplay support"
       version="1.0.0"
       provider-name="Team-Kodi">
  <requires>
    <import addon="kodi.game" version="1.0.0"/>
  </requires>
  <extension point="kodi.gameclient"
       library_android="libgame.netplay.so"
       library_linux="game.netplay.so"
       library_osx="game.netplay.dylib"
       library_windx="game.netplay.dll">
	</extension>
  <extension point="xbmc.addon.metadata">
    <summary lang="en">Netplay support for Kodi's Game API</summary>
    <description>This add-on provides netplay support for game add-ons.</description>
    <platform>all</platform>
    <nofanart>true</nofanart>
  </extension>
</addon>
